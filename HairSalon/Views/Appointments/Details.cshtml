@{
  Layout = "_Layout";
}

@model HairSalon.Models.Appointment
@using HairSalon.Models

<h2>@Html.DisplayNameFor(model => model.Client.Name): @Html.DisplayFor(model => model.Client.Name)</h2>
<ul>
  <li>@Html.DisplayNameFor(model => model.Date): @Html.DisplayFor(model => model.Date)</li>
  <li>@Html.DisplayNameFor(model => model.Time): @Html.DisplayFor(model => model.Time)</li>
  <li>Stylist: @Html.ActionLink($"{Model.Stylist.Name}", "Details", "Stylists", new { id = Model.Stylist.StylistId })</li>
</ul>

<p>@Html.ActionLink("Edit Appointment", "Edit", new { id = Model.AppointmentId })</p>
<p>@Html.ActionLink("Delete Appointment", "Delete", new { id = Model.AppointmentId })</p>