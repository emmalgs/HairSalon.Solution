@{
  Layout = "_Layout";
}

@model HairSalon.Models.Appointment
@using HairSalon.Models

<h2>Are you sure you want to delete this appointment?</h2>

<p>Appointment on @Model.Date.ToString("MM/dd/yyyy") for @Model.Client.Name with @Model.Stylist.Name</p>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.AppointmentId)
  <input type="submit" value="Delete" class="btn" />
}

<p>@Html.ActionLink("Cancel", "Details", new { id = Model.AppointmentId }, new { @class = "btn"})</p>