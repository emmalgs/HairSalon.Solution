@{
  Layout = "_Layout";
  List<Stylist> stylistsList = ViewBag.AllStylistsList;
}

@using HairSalon.Models

@if (stylistsList.Count == 0)
{
  <p>You have no stylists. Please add a stylist before continuing.</p>
  @Html.ActionLink("Add Stylist", "Create", "Stylists")
}
else
{
  if (Model.Count == 0)
  {
    <p>You have no clients yet.</p>
  }
  else 
  {
    foreach (Client client in Model)
    {
      <p>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId })</p>
    }
  }
  @Html.ActionLink("Add Client", "Create", null, null, new { @class="btn" })
}