@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist
@using HairSalon.Models

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)

  @Html.LabelFor(model => model.Specialty)
  @Html.DropDownListFor(model => model.Specialty,
        new SelectList(Enum.GetNames(typeof(SpecialtyOptions))),
        "Select Specialty")

  <input type="submit" value="Add new stylist" />
}

<p>@Html.ActionLink("All Stylists", "Index")</p>