@{
  Layout = "_Layout";
}

@using HairSalon.Models

@if (Model.Count == 0)
{
  <p>You have no stylists, yet.</p>
}

<ul>
@foreach (Stylist stylist in Model)
{
  <li>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</li>
}
</ul>

<p>@Html.ActionLink("Add a stylist", "Create" , null, null, new { @class="btn" })</p>
